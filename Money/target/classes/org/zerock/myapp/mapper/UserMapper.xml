<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="org.zerock.myapp.mapper.UserMapper">
  
 	<!-- UserInfo -->
  	<select id="UserInfo" resultType="org.zerock.myapp.domain.UserDTO">
  		SELECT *
  		FROM tbl_member
  		WHERE email = #{Email}
  	</select>
  	<!-- login -->
  	<select id="UserLogin" resultType="org.zerock.myapp.domain.UserDTO">
  		SELECT *
  		FROM tbl_member
  		WHERE
  			email = #{Email}
  			AND
  			password = #{Pw}
  	</select>
  
	<!-- Email distinckedEmail -->
 	<select id="distinckedEmail" resultType="java.lang.Integer">
 		SELECT 
 			count(Email)
 		FROM
 			tbl_member
 		WHERE
 			email = #{Email}
 	</select>
 	
 	<!-- distinckedNickName -->
  	<select id="distinckedNickName" resultType="java.lang.Integer">
  		SELECT
  			count(NickName)
  		FROM
  			tbl_member
  		WHERE
  			NickName = #{NickName}
  	</select>
  	
  	<!-- 회원가입 -->
  	<insert id="insertJoin">
  		INSERT INTO 
  			tbl_member(Email,Password,Nickname,Birth_Date,Join_date,Gender,Introduction,Profile_img)
		VALUES(
			#{Email},#{Pw},#{NickName},#{BIRTH_DATE},current_date,#{GENDER},#{INTRODUCTION},#{ProfileImg}
		)  	
  	</insert>
  </mapper>