<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="org.zerock.myapp.mapper.LikeMapper">
  
	<insert id="setLike">
		INSERT INTO
			tbl_like
		VALUES
		(
			like_SEQ.NEXTVAL,
			#{userEmail},
			#{board_seq},
			#{board_name}
		)
		
	</insert>
	
	<delete id="removeLike">
		DELETE FROM
			tbl_like
		WHERE
			email = #{userEmail}
			AND
			board_seq = #{board_seq}
			AND
			board = #{board_name}
	</delete>
  
</mapper>
  	